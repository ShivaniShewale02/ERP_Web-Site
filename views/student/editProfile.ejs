<%- include("../partials/studHeader"); -%>
<%- include("../partials/error"); -%>
<div class="facEditProfile">

    <form action="/student/editProfile" method="POST">
        <h3 class="editHdg">Personal Details</h3>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label class="edtLbl" for="editEmail">Email</label>
            <input type="email" class="form-control" id="editEmail"  name="editEmail" value="<%=studEmail%>">
          </div>
          <div class="form-group col-md-6">
            <label class="edtLbl" for="editId">ID</label>
            <input type="number" class="form-control" id="editId" name="editId" value="<%=studId%>" readonly>
          </div>
        </div>
     
        <div class="form-row">
          <div class="form-group col-md-6">
            <label class="edtLbl" for="editName">Name</label>
            <input type="text" class="form-control" id="editName" name="editName" value="<%=studName%>">
          </div>
          <div class="form-group col-md-6">
            <label class="edtLbl" for="editPhone">Phone</label>
            <input type="number" class="form-control" id="editPhone" name="editPhone" value="<%=studPhone%>">
          </div>
        </div>
        <div id="frmAOF" class="form-group">
            <label class="edtLbl" for="editBranch">Branch</label>
            <input type="text" class="form-control" id="editAOF" name="editBranch" value="<%=studBranch%>">
          </div>
          <h3 class="editHdg">Change Password</h3>

            <div class="form-group CngPass">
              <label class="edtLbl" for="editOldPass">Old Password</label>
              <input type="password" class="form-control edtPass" id="editOldPass"  name="editOldPass" placeholder="Old Password">
              <i style="visibility : hidden;" id="oldEye" class="far fa-eye"></i>
            </div>
            <div class="form-group CngPass">
                <label class="edtLbl" for="editNewPass">New Password</label>
                <input type="password" class="form-control edtPass" id="editNewPass"  name="editNewPass" placeholder="New Password">
                <i style="visibility : hidden;" id="newEye" class="far fa-eye"></i>
              </div>
              <div class="form-group CngPass">
                <label class="edtLbl" for="editNewCnfPass">Confirm New Password</label>
                <input type="password" class="form-control edtPass" id="editNewCnfPass"  name="editNewCnfPass" placeholder="Confirm New Password">
                <i style="visibility : hidden;" id="newCnfEye" class="far fa-eye"></i>
              </div>
 

        <button type="submit" class="btn btn-primary updateBtn"><i class="far fa-edit"></i> Update</button>
      </form>
</div>
<%- include("../partials/studFooter"); -%>