<%- include("../partials/header"); -%>
<%- include("../partials/error"); -%>

<div class="Add-Event">
    <h3 style="margin-left: 190px;">Faculty Events</h3>
  <form  class="event" action="/faculty/addFacultyEvent" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="evtName">Event Name</label>
      <input type="text" class="form-control" id="facEvtName" name="facEvtName" 
      placeholder="Event Name" required>
    </div>
    <div class="form-group col-md-6">
      <label for="evtDate">Event Date</label>
      <input type="date" class="form-control dt" id="facEvtDate" name="facEvtDate" required>
    </div>
     <div class="form-group">
    <label  for="evtDesc">Event Description</label>
    <textarea rows="4" cols="70" class="form-control"  id="facEvtDesc" name="facEvtDesc" rows="1" placeholder="Event Description" required></textarea>
  </div>
  </div>
  <button type="submit" class="btn btn-primary addEventBtn">Add</button>
  </form>
</div>
<%- include("../partials/footer"); -%>

